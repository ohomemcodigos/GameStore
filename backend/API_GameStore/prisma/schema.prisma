// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===================================
// MODELO 1: JOGO (Game)
// ===================================
model Game {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  slug        String   @unique
  description String?
  genre       String[]
  ageRating   String   @default("L")
  platforms   String[] @default(["PC"])
  developer   String[]
  publisher   String[]
  releaseDate DateTime
  price       Decimal
  discountPrice Decimal?
  coverUrl    String?
  isFeatured  Boolean  @default(false)
  systemRequirements Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  items       OrderItem[]
  licenseKeys LicenseKey[]
  wishlist    Wishlist[]
  reviews     Review[]
  

  gallery     GameMedia[] 
}

// ===================================
// MODELO 2: MÍDIAS DO JOGO (GameMedia)
// ===================================
model GameMedia {
  id     Int    @id @default(autoincrement())
  gameId Int
  type   String // "IMAGE" ou "VIDEO"
  url    String 
  
  // Relacionamento
  game   Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
}

// ===================================
// MODELO 3: USUÁRIO (User)
// ===================================
enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  nickname  String?  @unique
  avatarUrl String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)

  orders    Order[]
  wishlist  Wishlist[]
  reviews   Review[]
}

// ===================================
// MODELO 4: PEDIDO (Order)
// ===================================
model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  status      String   @default("PENDING")
  total       Decimal
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User          @relation(fields: [userId], references: [id])
  items       OrderItem[]
  transactions Transaction[]
}

// ===================================
// MODELO 5: ITEM DO PEDIDO (OrderItem)
// ===================================
model OrderItem {
  id              Int     @id @default(autoincrement())
  orderId         Int
  gameId          Int
  priceAtPurchase Decimal
  quantity        Int     @default(1)

  order           Order   @relation(fields: [orderId], references: [id])
  game            Game    @relation(fields: [gameId], references: [id])
  licenseKeys     LicenseKey[]

  @@unique([orderId, gameId])
}

// ===================================
// MODELO 6: TRANSAÇÃO (Transaction)
// ===================================
model Transaction {
  id            Int      @id @default(autoincrement())
  orderId       Int
  status        String
  amount        Decimal
  paymentMethod String
  gatewayId     String?
  createdAt     DateTime @default(now())

  order         Order    @relation(fields: [orderId], references: [id])
}

// ===================================
// MODELO 7: LICENSE KEY
// ===================================
model LicenseKey {
  id          Int       @id @default(autoincrement())
  keyString   String    @unique @db.VarChar(50)
  isUsed      Boolean   @default(false)
  gameId      Int
  game        Game      @relation(fields: [gameId], references: [id])
  orderItemId Int?
  orderItem   OrderItem? @relation(fields: [orderItemId], references: [id])
  createdAt   DateTime  @default(now())
}

// ===================================
// MODELO 8: WISHLIST
// ===================================
model Wishlist {
  id        Int      @id @default(autoincrement())
  userId    Int
  gameId    Int
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  game      Game     @relation(fields: [gameId], references: [id])

  @@unique([userId, gameId])
}

// ===================================
// MODELO 9: REVIEW
// ===================================
model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?
  userId    Int
  gameId    Int
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  game      Game     @relation(fields: [gameId], references: [id])
}